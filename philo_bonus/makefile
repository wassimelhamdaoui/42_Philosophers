SRC = philo_bonus.c utils_bonus.c main.c
OBJ = $(SRC:.c=.o)

NAME = philo_bonus
CFLAGS = -Wall -Wextra -Werror

all : $(NAME)
$(NAME) : $(OBJ) philo_bonus.h
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo ██████╗░░█████╗░███╗░░██╗██╗░░░██╗░██████╗
	@echo ██╔══██╗██╔══██╗████╗░██║██║░░░██║██╔════╝
	@echo ██████╦╝██║░░██║██╔██╗██║██║░░░██║╚█████╗░
	@echo ██╔══██╗██║░░██║██║╚████║██║░░░██║░╚═══██╗
	@echo ██████╦╝╚█████╔╝██║░╚███║╚██████╔╝██████╔╝
	@echo ╚═════╝░░╚════╝░╚═╝░░╚══╝░╚═════╝░╚═════╝░

clean :
	$(RM) $(OBJ)
fclean : clean
	$(RM) philo_bonus

re : fclean all